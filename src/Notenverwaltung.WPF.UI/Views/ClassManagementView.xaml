<views:MvxWpfView x:Class="Notenverwaltung.WPF.UI.Views.ClassManagementView"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
                  xmlns:region="clr-namespace:Notenverwaltung.WPF.UI.Region"
                  xmlns:viewModels="clr-namespace:Notenverwaltung.WPF.UI.ViewModels"
                  mc:Ignorable="d"
                  x:TypeArguments="viewModels:ClassManagementViewModel"
                  d:DesignHeight="690"
                  d:DesignWidth="1070"
                  MinHeight="690"
                  MinWidth="1070">
    <views:MvxWpfView.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </views:MvxWpfView.Resources>
    <views:MvxWpfView.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Expander ExpandDirection="Right"
                      Grid.Column="0"
                      Margin="10">
                <Expander.Header>
                    <TextBlock Text="Klassen-Suche"
                               RenderTransformOrigin=".5,.5">
                        <TextBlock.LayoutTransform>
                            <RotateTransform Angle="90" />
                        </TextBlock.LayoutTransform>
                    </TextBlock>
                </Expander.Header>

                <Grid TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
                      Margin="8,24,16,24">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <TextBox Grid.Row="0"
                             x:Name="ClassItemsSearchBox"
                             Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}"
                             DockPanel.Dock="Top"
                             Margin="16, 4"
                             Width="200"
                             materialDesign:HintAssist.Hint="Suche"
                             materialDesign:HintAssist.IsFloating="True"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                             materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                             materialDesign:TextFieldAssist.TextFieldCornerRadius="4" />

                    <ListBox x:Name="ClassItemsListBox"
                             Grid.Row="1"
                             Margin="0 16 0 16"
                             SelectedIndex="{Binding SelectedIndex}"
                             SelectedItem="{Binding SelectedItem, UpdateSourceTrigger=PropertyChanged}"
                             ItemsSource="{Binding ClassItems}">
                        <ListBox.Resources>
                            <Style TargetType="ScrollBar"
                                   BasedOn="{StaticResource MaterialDesignScrollBarMinimal}" />
                        </ListBox.Resources>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"
                                           Margin="32 0 32 0" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Grid.Row="2"
                            Style="{StaticResource MaterialDesignFloatingActionButton}"
                            ToolTip="Neue Klasse"
                            Command="{Binding NewClassCommand}">
                        <materialDesign:PackIcon Kind="Plus"
                                                 Height="24"
                                                 Width="24" />
                    </Button>
                </Grid>
            </Expander>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                            Margin="25">
                    <TextBlock  VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignHeadline5TextBlock}">
                Allgemeine Daten
                    </TextBlock>

                    <StackPanel Orientation="Horizontal">
                        <TextBox materialDesign:HintAssist.Hint="Stufe"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Left"
                                 Text="{Binding ClassName}"
                                 Margin="5"
                                 IsEnabled="{Binding ClassModifyEnabled}"
                                 MinWidth="200" />

                        <TextBox materialDesign:HintAssist.Hint="Unterteilung"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Left"
                                 Text="{Binding ClassName}"
                                 Margin="5"
                                 IsEnabled="{Binding ClassModifyEnabled}"
                                 MinWidth="200" />
                    </StackPanel>
                    <TextBox materialDesign:HintAssist.Hint="Klassenlehrer*in"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Left"
                             Margin="5"
                             Text="{Binding ClassTeacherName}"
                             IsEnabled="{Binding ClassModifyEnabled}"
                             MinWidth="200" />
                </StackPanel>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Margin="25"
                                Grid.Column="0">
                        <TextBlock  VerticalAlignment="Center"
                                    Style="{StaticResource MaterialDesignHeadline5TextBlock}">
                Schüler
                        </TextBlock>

                        <ListBox Margin="0 16 0 16"
                                 ItemsSource="{Binding ClassStudentItems}">
                            <ListBox.Resources>
                                <Style TargetType="ScrollBar"
                                       BasedOn="{StaticResource MaterialDesignScrollBarMinimal}" />
                            </ListBox.Resources>

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding FirstName}"
                                                   Margin="32 0 32 0" />
                                        <TextBlock Text="{Binding LastName}"
                                                   Margin="32 0 32 0" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <Button Grid.Row="2"
                                Style="{StaticResource MaterialDesignFloatingActionButton}"
                                ToolTip="Neue Klasse"
                                Command="{Binding NewClassStudentCommand}">
                            <materialDesign:PackIcon Kind="Plus"
                                                     Height="24"
                                                     Width="24" />
                        </Button>
                    </StackPanel>

                    <StackPanel Margin="25"
                                Grid.Column="1">
                        <TextBlock  VerticalAlignment="Center"
                                    Style="{StaticResource MaterialDesignHeadline5TextBlock}">
                Fächer und Lehrer
                        </TextBlock>

                        <ListBox Margin="0 16 0 16"
                                 ItemsSource="{Binding ClassSubjectItems}">
                            <ListBox.Resources>
                                <Style TargetType="ScrollBar"
                                       BasedOn="{StaticResource MaterialDesignScrollBarMinimal}" />
                            </ListBox.Resources>

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding SubjectName}"
                                                   Margin="32 0 32 0" />
                                        <TextBlock Text="{Binding FirstName}"
                                                   Margin="32 0 32 0" />
                                        <TextBlock Text="{Binding LastName}"
                                                   Margin="32 0 32 0" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <Button Grid.Row="2"
                                Style="{StaticResource MaterialDesignFloatingActionButton}"
                                ToolTip="Neue Klasse"
                                Command="{Binding NewClassSubjectCommand}">
                            <materialDesign:PackIcon Kind="Plus"
                                                     Height="24"
                                                     Width="24" />
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </views:MvxWpfView.Content>
</views:MvxWpfView>